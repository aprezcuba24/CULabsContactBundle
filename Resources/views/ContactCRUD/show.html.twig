{% extends 'CULabsAdminBundle:Crud:view.html.twig' %}

{% block title_page %}{{ 'Detail Contact'|trans }}{% endblock %}

{% block actions %}
    <div class="table-header">
        <ul class="actions">
            <li>
                <a href="{{ path('admin_contact') }}" class="btn btn-icon btn-info">     
                    <i class="icon-list icon-white"></i>{{ 'List'|trans }}  
                </a>
            </li>
            {% if is_granted('ROLE_CONTACT_EDIT') %}
            <li>
                <a href="{{ path('admin_contact_edit', { 'id': entity.id }) }}" class="btn btn-icon btn-primary">     
                <i class="icon-pencil icon-white"></i>{{ 'Edit'|trans }}  
                </a>
            </li>
            {% endif %}
            {% if is_granted('ROLE_CONTACT_NEW') %}
            <li>
                <a href="{{ path('admin_contact_new') }}" class="btn btn-icon btn-primary">     
                <i class="icon-plus-sign icon-white"></i>{{ 'New'|trans }}  
                </a>
            </li>
            {% endif %}
            {% if is_granted('ROLE_CONTACT_DELETE') %}
            <li>
                <a href="#" onclick="confirmarUrl('{{ 'Realmente desea borrar'|trans }}', '{{ path('admin_contact_delete', { 'id': entity.id }) }}', '{{ 'Comfirmar'|trans }}')" class="btn btn-icon btn-danger">     
                <i class="icon-remove icon-white"></i>{{ 'Delete'|trans }}  
                </a>
            </li>
            {% endif %}
        </ul>
    </div>
{% endblock %}
    
{% block view_body %}
<table class="table table-bordered table-hover table-striped">   
    <tr>
        <th class="span2">{{ 'Name'|trans }}</th>
        <td>
            {{ entity.name }}
        </td>
    </tr>        
    <tr>
        <th class="span2">{{ 'Email'|trans }}</th>
        <td>
            {{ entity.email }}
        </td>
    </tr>        
    <tr>
        <th class="span2">{{ 'Telefono'|trans }}</th>
        <td>
            {{ entity.telefono }}
        </td>
    </tr>        
    <tr>
        <th class="span2">{{ 'Celular'|trans }}</th>
        <td>
            {{ entity.celular }}
        </td>
    </tr>        
    <tr>
        <th class="span2">{{ 'Ciudad'|trans }}</th>
        <td>
            {{ entity.ciudad }}
        </td>
    </tr></table>
{% endblock %}