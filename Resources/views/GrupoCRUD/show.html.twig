{% extends 'CULabsAdminBundle:Crud:view.html.twig' %}

{% block title_page %}{{ 'Detail Grupo'|trans }}{% endblock %}

{% block actions %}
    <div class="table-header">
        <ul class="actions">
            <li>
                <a href="{{ path('admin_contact_grupo') }}" class="btn btn-icon btn-info">     
                    <i class="icon-list icon-white"></i>{{ 'List'|trans }}  
                </a>
            </li>
            {% if is_granted('ROLE_GRUPO_EDIT') %}
            <li>
                <a href="{{ path('admin_contact_grupo_edit', { 'id': entity.id }) }}" class="btn btn-icon btn-primary">     
                <i class="icon-pencil icon-white"></i>{{ 'Edit'|trans }}  
                </a>
            </li>
            {% endif %}
            {% if is_granted('ROLE_GRUPO_NEW') %}
            <li>
                <a href="{{ path('admin_contact_grupo_new') }}" class="btn btn-icon btn-primary">     
                <i class="icon-plus-sign icon-white"></i>{{ 'New'|trans }}  
                </a>
            </li>
            {% endif %}
            {% if is_granted('ROLE_GRUPO_DELETE') %}
            <li>
                <a href="#" onclick="confirmarUrl('{{ 'Realmente desea borrar'|trans }}', '{{ path('admin_contact_grupo_delete', { 'id': entity.id }) }}', '{{ 'Comfirmar'|trans }}')" class="btn btn-icon btn-danger">     
                <i class="icon-remove icon-white"></i>{{ 'Delete'|trans }}  
                </a>
            </li>
            {% endif %}
        </ul>
    </div>
{% endblock %}
    
{% block view_body %}
<table class="table table-bordered table-hover table-striped">        
    <tr>
        <th class="span2">{{ 'Name'|trans }}</th>
        <td>
            {{ entity.name }}
        </td>
    </tr></table>
{% endblock %}